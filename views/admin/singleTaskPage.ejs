<div class="max-w-4xl mx-auto bg-white shadow-xl rounded-lg overflow-hidden">

    <div class="p-6 border-b border-gray-200 flex justify-between items-start">
        <h1 class="text-3xl font-extrabold text-gray-900" id="taskTitle">
            <%= task.title %>
        </h1>
        <form action="/<%= user.role %>/task/<%= task._id %>/delete" onsubmit="confirmDelete(event)" method="post">
        <button type="submit"
            class="delete-btn px-4 py-2 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 focus:outline-none focus:ring-4 focus:ring-red-300 shadow-md flex items-center space-x-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd"
                    d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z"
                    clip-rule="evenodd" />
            </svg>
            <span>Delete Task</span>
        </button>
        </form>
    </div>

    <div class="p-6">
        <% if (task.attachments[0]) { %>
         <img src="<%= task.attachments[0].fileUrl %>" id="taskImage" class="w-full h-80 object-cover rounded-lg shadow-inner border border-gray-200"
            alt="Task Attachment">
        <% } else {%>
            <h3 class="text-2xl font-bold">No Image Attached</h3>
        <% } %>
    </div>

    <div class="p-6 pt-0">
        <h2 class="text-xl font-bold mb-4 text-gray-700 border-b pb-2">Task Attributes</h2>
        <dl class="grid grid-cols-1 gap-x-6 gap-y-4 sm:grid-cols-2">

            <div class="sm:col-span-2 bg-gray-50 p-4 rounded-lg border border-gray-200">
                <dt class="text-sm font-medium text-gray-500">Description:</dt>
                <dd class="mt-1 text-lg text-gray-800" id="taskDescription"><%= task.description %></dd>
            </div>

            <div class="border-l-4 pl-4" id="taskStatusContainer">
                <dt class="text-sm font-medium text-gray-500">Status:</dt>
                <dd class="mt-1 text-lg font-semibold" id="taskStatus"><%= task.status %></dd>
            </div>

            <div class="border-l-4 pl-4" id="taskPriorityContainer">
                <dt class="text-sm font-medium text-gray-500">Priority:</dt>
                <dd class="mt-1 text-lg font-semibold" id="taskPriority"><%= task.priority %></dd>
            </div>

            <div class="border-l-4 pl-4 border-yellow-500">
                <dt class="text-sm font-medium text-gray-500">Deadline:</dt>
                <dd class="mt-1 text-lg text-gray-800" id="taskDeadline"><%= task.deadline.toLocaleDateString() %></dd>
            </div>

            <div class="border-l-4 pl-4 border-indigo-500">
                <dt class="text-sm font-medium text-gray-500">Assigned To:</dt>
                <dd class="mt-1 text-lg text-gray-800" id="taskAssignedTo"><%= task.assignedTo.name %> (<%= task.assignedTo.email %>)</dd>
            </div>

            <div class="border-l-4 pl-4 border-green-500">
                <dt class="text-sm font-medium text-gray-500">Created By:</dt>
                <% if (task.createdBy) { %>
                <dd class="mt-1 text-lg text-gray-800" id="taskCreatedBy"><%= task.createdBy.name %></dd>
                <% } else { %>
                <dd class="mt-1 text-lg text-gray-800" id="taskCreatedBy">N/A</dd>
               <% } %> 
            </div>

            <div class="border-l-4 pl-4 border-blue-500">
                <dt class="text-sm font-medium text-gray-500">Created At:</dt>
                <dd class="mt-1 text-lg text-gray-800" id="taskCreatedAt"><%= task.createdAt.toLocaleDateString() %></dd>
            </div>

        </dl>
    </div>
</div>