<div
  class="flex flex-col items-center justify-center min-h-screen bg-gray-900 px-6"
>
  <div class="bg-white rounded-2xl shadow-lg p-8 max-w-md text-center">
    <!-- Error Icon -->
    <div
      class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-red-100 mb-4"
    >
      <svg
        class="h-8 w-8 text-red-600"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L4.34 16c-.77 1.333.192 3 1.732 3z"
        />
      </svg>
    </div>

    <!-- Error Title -->
    <h1 class="text-2xl font-bold text-gray-800">Something went wrong</h1>

    <!-- Error Message -->
    <p class="text-gray-600 mt-2">
      <%= message || "An unexpected error occurred. Please try again later." %>
    </p>

    <!-- Action Button -->
    <% if(url) {%>
    <div class="mt-6">
      <a
        href="<%= url %>"
        class="inline-block rounded-xl bg-indigo-600 px-5 py-2 text-white font-semibold shadow-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-400"
      >
        Go Back
      </a>
    </div>
    <% } else {%>

    <div class="mt-6">
      <a
        href=""
        class="inline-block rounded-xl bg-indigo-600 px-5 py-2 text-white font-semibold shadow-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-400"
      >
        Go Back
      </a>
    </div>
    <% } %>
  </div>
</div>
